@{ Layout = "../Shared/_Layout.cshtml"; }
@section Navs{ <template v-if="pageType == $pageTypeAdmin">
  <li class="nav-item">
    <a class="nav-link active" href="admin.cshtml">管理员管理</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="adminRole.cshtml">角色管理</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="adminConfig.cshtml">管理员设置</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="adminAccessTokens.cshtml">API密钥管理</a>
  </li>
</template>
<template v-else-if="pageType == $pageTypeUser">
  <li class="nav-item">
    <a class="nav-link active" :href="'adminView.cshtml?pageType=' + $pageTypeUser + '&userId=' + userId">查看资料</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" :href="'adminProfile.cshtml?pageType=' + $pageTypeUser + '&userId=' + userId">修改资料</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" :href="'adminPassword.cshtml?pageType=' + $pageTypeUser + '&userId=' + userId">更改密码</a>
  </li>
</template> }

<template v-if="returnUrl">
  <div class="header-title">查看资料</div>
  <p class="text-muted font-13 m-b-25"></p>
</template>

<table v-if="administrator" class="table table-bordered table-striped">
  <tbody>
    <tr>
      <td width="35%"> 管理员Id </td>
      <td width="65%">{{ administrator.id }}</td>
    </tr>
    <tr>
      <td> 账号 </td>
      <td>{{ administrator.userName }}</td>
    </tr>
    <tr>
      <td> 姓名 </td>
      <td>{{ administrator.displayName }}</td>
    </tr>
    <tr>
      <td> 级别 </td>
      <td>{{ level }}</td>
    </tr>
    <tr v-if="isOrdinaryAdmin">
      <td> 角色 </td>
      <td v-html="roleNames"></td>
    </tr>
    <tr v-if="!isSuperAdmin">
      <td> 可管理站点 </td>
      <td v-html="siteNames"></td>
    </tr>
    <tr>
      <td> 创建时间 </td>
      <td>{{ administrator.creationDate }}</td>
    </tr>
    <tr>
      <td> 最后登录时间 </td>
      <td>{{ administrator.lastActivityDate }}</td>
    </tr>
    <tr>
      <td> 手机号码 </td>
      <td>{{ administrator.mobile }}</td>
    </tr>
    <tr>
      <td> 电子邮箱 </td>
      <td>{{ administrator.email }}</td>
    </tr>
  </tbody>
</table>
<template v-if="pageType == $pageTypeAdmin">
  <hr />
  <div class="text-center">
    <button class="btn ml-1" v-on:click="btnReturnClick">返 回</button>
  </div>
</template>
<template v-else-if="returnUrl">
  <hr />
  <div class="text-center">
    <button class="btn ml-1" v-on:click="location.href = returnUrl">返 回</button>
  </div>
</template>
@section Scripts{ <script src="adminView.js" type="text/javascript"></script> }