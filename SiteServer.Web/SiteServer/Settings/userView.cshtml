@{ Layout = "../Shared/_Layout.cshtml"; }
@section Navs{
<template v-if="!returnUrl">
<li class="nav-item">
  <a class="nav-link active" href="user.cshtml">用户管理</a>
</li>
<li class="nav-item">
  <a class="nav-link" href="userGroup.cshtml">用户组管理</a>
</li>
<li class="nav-item">
  <a class="nav-link" href="userStyle.cshtml">用户字段</a>
</li>
<li class="nav-item">
  <a class="nav-link" href="userConfig.cshtml">用户设置</a>
</li>
</template>
}

<template v-if="returnUrl">
  <div class="header-title">查看资料</div>
  <p class="text-muted font-13 m-b-25"></p>
</template>

<p class="text-muted font-13 m-b-25"></p>
<table class="table table-bordered table-striped">
  <tbody>
    <tr>
      <td width="35%"> 用户Id </td>
      <td width="65%">{{ user.id }}</td>
    </tr>
    <tr>
      <td> 账号 </td>
      <td>{{ user.userName }}</td>
    </tr>
    <tr>
      <td> 姓名 </td>
      <td>{{ user.displayName }}</td>
    </tr>
    <tr>
      <td> 组别 </td>
      <td>{{ groupName }}</td>
    </tr>
    <tr>
      <td> 创建时间 </td>
      <td>{{ user.createDate }}</td>
    </tr>
    <tr>
      <td> 最后登录时间 </td>
      <td>{{ user.lastActivityDate }}</td>
    </tr>
    <tr>
      <td> 手机号码 </td>
      <td>{{ user.mobile }}</td>
    </tr>
    <tr>
      <td> 电子邮箱 </td>
      <td>{{ user.email }}</td>
    </tr>
  </tbody>
</table>
<hr />

<template v-if="returnUrl">
  <hr />
  <div class="text-center">
    <button class="btn ml-1" v-on:click="location.href = returnUrl">返 回</button>
  </div>
</template>
<template v-else>
  <hr />
  <div class="text-center">
    <button class="btn ml-1" v-on:click="btnReturnClick">返 回</button>
  </div>
</template>
  
@section Scripts{ <script src="userView.js" type="text/javascript"></script> }