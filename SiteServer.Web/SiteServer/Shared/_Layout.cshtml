@using SiteServer.CMS.Pages
<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <title>管理后台</title>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="renderer" content="webkit" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link href="../assets/images/favicon.png" rel="icon" type="image/png">
  <link href="../assets/css/font-awesome-4.7.0.min.css" rel="stylesheet" type="text/css" />
  <link href="../assets/element-ui/theme-chalk/index.css" rel="stylesheet" type="text/css" />
  <link href="../assets/css/element-ui.css" rel="stylesheet" type="text/css" />
  @if (IsSectionDefined("Styles")){ @RenderSection("Styles") }
</head>

<body>
  <div id="main">

    <div v-if="pageLoad" style="display: none" :style="{display: ''}">
      @if (IsSectionDefined("Navs")){
        <div class="card-box">
          <div class="mb-3">
            <ul class="nav nav-pills nav-fill bg-muted m-b-20" style="border-radius: 1.25rem;">
              @RenderSection("Navs")
            </ul>
          </div>
    
          <hr />
    
          <div v-if="this.pageAlert" class="alert" v-bind:class="{ 'alert-warning': pageAlert.type === 'warning', 'alert-success': pageAlert.type === 'success', 'alert-danger': pageAlert.type === 'danger' }">
            <button v-on:click="pageAlert = null" class="close" data-dismiss="alert">×</button>
            <span v-html="pageAlert.html"></span>
          </div>
    
          @RenderBody()
        </div>
        } else {
          <div v-if="this.pageAlert" class="alert" v-bind:class="{ 'alert-warning': pageAlert.type === 'warning', 'alert-success': pageAlert.type === 'success', 'alert-danger': pageAlert.type === 'danger' }">
            <button v-on:click="pageAlert = null" class="close" data-dismiss="alert">×</button>
            <span v-html="pageAlert.html"></span>
          </div>
          
        @RenderBody()
        }
    </div>
    <div v-else style="height: 500px" v-loading="true" element-loading-text="页面加载中"></div>

  </div>
</body>

</html>

<script src="../assets/js/es6-promise.auto.min.js" type="text/javascript"></script>
