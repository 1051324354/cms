@{ Layout = "../Shared/_Layout.cshtml"; }

<el-menu default-active="1" mode="horizontal"
  background-color="#545c64"
  text-color="#fff"
  active-text-color="#ffd04b"
>
  <el-menu-item index="1"><el-link :underline="false" :href="'settingsChannelGroup.cshtml?siteId=' + siteId">栏目组管理</el-link></el-menu-item>
  <el-menu-item index="2"><el-link :underline="false" :href="'settingsContentGroup.cshtml?siteId=' + siteId">内容组管理</el-link></el-menu-item>
  <el-menu-item index="3"><el-link :underline="false" :href="'settingsContentTag.cshtml?siteId=' + siteId">内容标签管理</el-link></el-menu-item>
</el-menu>

<el-card>
  <div slot="header" class="clearfix">
    <span>栏目组管理</span>
  </div>

  <el-table :data="groups">
    <el-table-column label="栏目组名称" prop="groupName"></el-table-column>
    <el-table-column label="栏目组说明" prop="description"></el-table-column>
    <el-table-column label="操作" width="190">
      <template slot-scope="scope">
        <el-link
          :underline="false"
          v-on:click="btnEditClick(scope.row)"
          type="primary">
          编辑
        </el-link>
        <el-link
          :underline="false"
          v-on:click="btnOrderClick(scope.row, true)"
          type="primary">
          上升
        </el-link>
        <el-link
          :underline="false"
          v-on:click="btnOrderClick(scope.row, false)"
          type="primary">
          下降
        </el-link>
        <el-link
          :underline="false"
          v-if="scope.row.id > 0"
          type="danger"
          v-on:click="btnDeleteClick(scope.row)">
          删除
        </el-link>
      </template>
    </el-table-column>
  </el-table>

  <div style="height: 10px"></div>
  <el-divider></el-divider>
  <div style="height: 10px"></div>

  <el-button
    size="small"
    type="primary"
    v-on:click="btnAddClick">
    新增栏目组
  </el-button>

</el-card>

<el-drawer
  id="form"
  v-if="form"
  :title="form.id !== 0 ? '修改栏目组' : '添加栏目组'"
  :visible.sync="panel"
  destroy-on-close
  direction="rtl"
  size="50%">
  <div class="drawer__content">
    <el-form size="small" ref="form" :model="form" label-width="150px" :rules="{
      groupName: [
          { required: true, message: '请输入栏目组名称' }
        ]
      }">
      <el-form-item label="栏目组名称" prop="groupName">
        <el-input v-model="form.groupName" placeholder="请输入栏目组名称"></el-input>
      </el-form-item>
      <el-form-item label="栏目组说明" prop="description">
        <el-input type="textarea" v-model="form.description" placeholder="请输入栏目组说明"></el-input>
      </el-form-item>

      <el-divider></el-divider>
      <div class="drawer__footer">
        <el-button type="primary" v-on:click="btnSubmitClick" size="small">确 定</el-button>
        <el-button size="small" v-on:click="btnCancelClick">取 消</el-button>
      </div>
    </el-form>
  </div>
</el-drawer>

@section Scripts{
<script src="settingsChannelGroup.js" type="text/javascript"></script> }