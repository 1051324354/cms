@{ Layout = "../Shared/_Layout.cshtml"; }

<el-form label-width="120px" size="small">
  <el-form-item label="内容标题">
    <el-link type="primary" :underline="false" :href="getContentUrl(content)" v-html="content.title" target="_blank" v-on:click.stop.native></el-link>
  </el-form-item>
  <el-form-item label="审核状态">
    <el-link size="mini" :underline="false" :type="(content.checked ? 'primary' : 'danger')">
      {{ content.checked ? '已审核' : '待审核' }}
    </el-link>
  </el-form-item>
</el-form>

<el-table
  :data="contentChecks"
  style="width: 100%;"
  size="small"
  row-key="id"
  stripe>
  <el-table-column prop="userName" label="审核人" width="150"></el-table-column>
  <el-table-column prop="checkDate" label="审核时间" width="150"></el-table-column>
  <el-table-column prop="reasons" label="审核原因"></el-table-column>
</el-table>

<el-divider></el-divider>
<el-row align="right" style="margin-right: 5px; margin-top: 10px;">
  <el-col :span="24" align="right">
    <el-button size="small" type="primary" v-on:click="btnSubmitClick">审 核</el-button>
    <el-button size="small" v-on:click="btnCancelClick">取 消</el-button>
  </el-col>
</el-row>

@section Scripts{
<script src="contentsLayerState.js" type="text/javascript"></script> }