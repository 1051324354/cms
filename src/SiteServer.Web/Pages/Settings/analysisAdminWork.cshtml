@page
@{ Layout = "../Shared/_Layout.cshtml"; }
@section Navs{
<li class="nav-item">
  <a class="nav-link" href="analysisSite.cshtml">站点数据统计</a>
</li>
<li class="nav-item">
  <a class="nav-link" href="analysisAdminLogin.cshtml">管理员登录统计</a>
</li>
<li class="nav-item">
  <a class="nav-link active" href="analysisAdminWork.cshtml">管理员工作统计</a>
</li>
<li class="nav-item">
  <a class="nav-link" href="analysisUser.cshtml">用户数据统计</a>
</li>
}

<el-form :inline="true" :model="formInline" size="mini">
  <el-form-item label="站点">
    <el-cascader
    v-model="formInline.siteIds"
    ref="sites"
    :options="siteOptions"
    :props="{ multiple: false, checkStrictly: true }"
    clearable></el-cascader>
  </el-form-item>
  <el-form-item label="从">
    <el-date-picker
      v-model="formInline.dateFrom"
      type="date"
      placeholder="选择开始日期">
    </el-date-picker>
  </el-form-item>
  <el-form-item label="到">
    <el-date-picker
      v-model="formInline.dateTo"
      type="date"
      placeholder="选择结束日期">
    </el-date-picker>
  </el-form-item>
  
  <el-form-item>
    <el-button type="primary" v-on:click="btnSearchClick">统计</el-button>
  </el-form-item>
</el-form>

<div class="text-center">
  <el-radio-group v-model="pageType" size="small">
    <el-radio-button label="chart">按图表显示</el-radio-button>
    <el-radio-button label="table">按表格显示</el-radio-button>
  </el-radio-group>
</div>

<hr />

<el-table
  v-if="pageType === 'table'"
  :data="items"
  style="width: 100%">
  <el-table-column
    label="管理员">
    <template slot-scope="scope">
      <a :href="'adminView.cshtml?userName=' + scope.row.userName + '&returnUrl=' + encodeURIComponent(location.href)">{{scope.row.userName}}</a>
    </template>
  </el-table-column>
  <el-table-column
    prop="addCount"
    label="新增（次）">
  </el-table-column>
  <el-table-column
    prop="updateCount"
    label="修改（次）">
  </el-table-column>
</el-table>

<v-chart v-if="pageType === 'chart'" :options="chartOption" style="width: 100%; height: 450px;"/>

@section Scripts{
<script src="../assets/lib/echarts/echarts-4.1.0.min.js"></script>
<script src="../assets/lib/echarts/vue-echarts-4.0.2.min.js"></script>
<script src="analysisAdminWork.js" type="text/javascript"></script> }