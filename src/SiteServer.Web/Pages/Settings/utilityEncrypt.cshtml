@page
@{ Layout = "../Shared/_Layout.cshtml"; } 
@section Navs{
  <li class="nav-item">
    <a class="nav-link" href="utilityCache.cshtml">系统缓存</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="utilityParameters.cshtml">系统参数</a>
  </li>
  <li class="nav-item">
    <a class="nav-link active" href="utilityEncrypt.cshtml">加密/解密字符串</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="utilityDbLogDelete.cshtml">清空数据库日志</a>
  </li>
}

<div class="form-group">
  <el-radio v-model="isEncrypt" :label="true" v-on:change="radioChanged">加密</el-radio>
  <el-radio v-model="isEncrypt" :label="false" v-on:change="radioChanged">解密</el-radio>
</div>

<div class="form-group">
  <label>
    需要{{ isEncrypt ? '加密' : '解密'}}的字符串
    <small v-show="errors.has('value')" class="text-danger">{{ errors.first('value') }}</small>
  </label>
  <textarea v-model="value" name="value" rows="5" data-vv-as="字符串" v-validate="'required'"
    :class="{'is-invalid': errors.has('value') }" type="text" class="form-control"></textarea>
</div>

<div v-if="results" class="form-group">
  <label>
    {{ isEncrypt ? '加密' : '解密'}}后的字符串
  </label>
  <br />
  <code>{{ results }}</code>
</div>

<hr />

<div class="text-center">
  <button class="btn btn-primary m-r-5" v-on:click="btnSubmitClick">确 定</button>
</div>

@section Scripts{
<script src="utilityEncrypt.js" type="text/javascript"></script> }